{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "start": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
        "cache": false,
        "outputs": [],
        "dependsOn": []
    },
    "e2e": {
      "cache": false,
      "outputs": [],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "fix": {
      "dependsOn": ["lint", "typecheck"],
      "outputs": []
    }
  }
} 
