{
  "name": "ouzx.me",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "author": "Ouzx",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "turbo run build",
    "start": "turbo run start",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "e2e": "turbo run e2e",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint -- --fix",
    "fix": "turbo run fix",
    "prepare": "husky",
    "commit": "git add -A && cz",
    "commit:stage": "cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@ouzx-me/eslint-config": "workspace:*",
    "@ouzx-me/typescript-config": "workspace:*",
    "commitizen": "^4.3.1",
    "cz-emoji": "1.3.2-canary.2",
    "eslint": "^9.29.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    },
    "cz-emoji": {
      "skipQuestions": [
        "issues",
        "body",
        "breaking"
      ]
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,html,md,json,jsonc,yml,yaml,toml,xml,css,postcss}": [
      "pnpm run lint --"
    ],
    "*.{ts,tsx}": [
      "sh -c 'tsc --noEmit'"
    ]
  }
}
