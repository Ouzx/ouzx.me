{
  "name": "ouzx.me",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.16.0",
  "author": "Ouzx",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "turbo run build",
    "deploy": "turbo run deploy",
    "start": "turbo run start",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "e2e": "turbo run e2e",
    "typecheck": "turbo run typecheck",
    "typegen": "turbo run typegen",
    "lint": "turbo run lint --",
    "fix": "turbo run fix",
    "prepare": "husky",
    "commit": "git add -A && cz",
    "commit:stage": "cz"
  },
  "devDependencies": {
    "@commitlint/cli": "catalog:",
    "@ouzx-me/eslint-config": "workspace:*",
    "@ouzx-me/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "commitizen": "catalog:",
    "cz-emoji": "catalog:",
    "eslint": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    },
    "cz-emoji": {
      "skipQuestions": [
        "body",
        "breaking"
      ]
    }
  }
}
