{
  "name": "ouzx.me",
  "version": "0.0.1",
  "scripts": {
    "build": "turbo run build",
    "start": "turbo run start",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "e2e": "turbo run e2e",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "clean": "turbo run clean",
    "prepare": "husky",
    "commit": "git add -A && cz",
    "commit:stage": "cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "commitizen": "^4.3.1",
    "cz-emoji": "1.3.2-canary.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    },
    "cz-emoji": {
      "skipQuestions": [
        "issues",
        "body",
        "breaking"
      ]
    }
  },
  "author": "Ouzx",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=18"
  }
}
